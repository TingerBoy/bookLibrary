/* Pages/login/login.wxss */
page{
  height: 100%;
}
 
.container {
  height:100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2
} 
 
/*登录图片*/
.login-icon{
  flex: none;
  align-items: center;
}
.login-img{
  width: 750rpx;
  height: 580rpx;
}
 
/*表单内容*/
.login-from {
  margin-top: 20rpx;
  flex: auto;
  height:100%;
}
 
.inputView {
  background-color: #fff;
  line-height: 38px;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22rpx;
  width: 12px;
  height: 12px
}
 
.loginLab {
  margin: 15rpx 15rpx 15rpx 10rpx;
  color: #545454;
  font-size: 14px
}
.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22rpx;
  margin-top: 11rpx;
  color: #cccccc;
  font-size: 14px
}
 
.line {
  width: 100%;
  height: 1rpx;
  background-color: #cccccc;
  margin-top: 1px;
}
/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  padding-bottom: 0rpx;
}
 
.loginBtn {
  width: 80%;
  margin-top: 120rpx;
}
