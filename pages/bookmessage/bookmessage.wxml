<!--教材信息-->
 <view class='history-table-wrap'>
    <view class="table">
      <view class="tr">
          <view class="th th3">序号</view>
          <view class="th th3">书名</view>
          <view class="th th3">作者</view>
          <view class="th th3">价格</view>
          <view class="th th3">出版社</view>
          <view class="th th3">版次</view>
          <view class="th th3">出版年月</view>
          <view class="th th3">ISBN</view>
      </view>
       <view wx:for-items="{{book}}" wx:key="{{item.id}}">
      <view class="tr">
          <view class="td td3">{{message[0].number}}</view>
          <view class="td td3">{{item.name}}</view>
          <view class="td td3">{{message[2].author}}</view>
          <view class="td td3">{{item.price}}</view>
          <view class="td td3">{{message[4].press}}</view>
          <view class="td td3">{{message[5].order}}</view>
          <view class="td td3">{{message[6].time}}</view>
          <view class="td td3">{{message[7].ISBN}}</view>
      </view>
      
    </view>
    </view>
 </view>
